{
  "manifest_version": 2,
  "name": "Vaguely Brown",
  "description": "Like images of outfits while browsing the
  web and add them to your collection.",
  "version": "1",
  "author": "Vaguely Brown Team",

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
    }],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "tuxedo (1).png"
  },

  "permissions": [
    "activeTab"
  ]


}
